@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            padding: 0 20px;
            margin: 0 auto;
        }

        .section-title {
            font-family: 'League Spartan', sans-serif;
            font-size: 3em;
            margin: 15px 0;
        }

        .next-release-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .release {
            width: calc(33.33% - 20px);
            max-width: 400px;
            position: relative;
            overflow: hidden;
            border: 5px solid rgba(255, 0, 0, 0.8);
            border-radius: 15px;
            margin: 10px;
            box-shadow: 0px 5px 15px rgba(255, 255, 255, 0.5);
            transition: transform 0.3s ease;
        }

            .release img {
                width: 100%;
                height: auto;
                transition: transform 0.3s ease;
            }

            .release:hover img {
                transform: scale(1.05);
            }

        .release-date {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            font-family: 'League Spartan', sans-serif;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.7);
            padding: 8px 0;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }

        .release:hover .release-date {
            transform: translateY(0);
        }

        .release-date span {
            padding: 5px 10px;
            color: white;
            transition: transform 0.5s ease;
        }

            .release-date span:hover {
                transform: rotate(5deg);
            }

        .image-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

            .image-container img {
                width: calc(33.33% - 10px);
                height: auto;
                margin-right: 5px;
                box-shadow: 0px 5px 15px rgba(255, 255, 255, 0.5);
                transition: transform 0.3s ease;
            }

                .image-container img:hover {
                    transform: scale(1.05);
                    box-shadow: 0px 8px 20px rgba(255, 255, 255, 0.8);
                }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="section-title">🎬 PRÓXIMOS ESTRENOS 🎬</h2>
        <div class="next-release-container">
            @foreach (var pelicula in Model)
            {
                @if (pelicula.Activo)
                {
                    <div class="release">
                        <div class="release-image">
                            <img src="@pelicula.Portada" alt="Próximo Estreno">
                        </div>
                        <div class="release-date">
                            <span>ESTRENO: @pelicula.FechaDeLanzamiento.ToShortDateString()</span>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="image-container">
            <img src="~/Images/feat1.png" alt="Imagen 1">
            <img src="~/Images/feat2.png" alt="Imagen 2">
            <img src="~/Images/feat3.png" alt="Imagen 3">
        </div>
    </div>
</body>
</html>
