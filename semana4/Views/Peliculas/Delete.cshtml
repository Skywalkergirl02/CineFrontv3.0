@model Pelicula

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Película</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 20px;
            background: rgba(30, 30, 30, 0.9);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                color: #9B0B0B;
                font-weight: bold;
            }

        .form-control {
            background-color: #3a3a3a;
            color: #fff;
            border: 1px solid #9B0B0B;
            border-radius: 30px;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #9B0B0B;
                color: #000;
            }

        .btn-danger {
            background: linear-gradient(45deg, #9B0B0B, #F72626);
            border: none;
            border-radius: 30px;
        }

            .btn-danger:hover {
                background: linear-gradient(45deg, #F72626, #9B0B0B);
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Película</h1>

        <h3>¿Está seguro que quiere eliminar esta película?</h3>
        <div>
            <h4>Película</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Director)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Director)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaDeLanzamiento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaDeLanzamiento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Duracion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Duracion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Sinopsis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Sinopsis)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Portada)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Portada)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Trailer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Trailer)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Activo)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PeliculaId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
