@model Pelicula

@{
    ViewData["Title"] = "Crear Película";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Película</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 20px;
            background: rgba(30, 30, 30, 0.9);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                color: #9B0B0B;
                font-weight: bold;
            }

        .form-control {
            background-color: #3a3a3a;
            color: #fff;
            border: 1px solid #9B0B0B;
            border-radius: 30px;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #9B0B0B;
                color: #000;
            }

        .form-check-input {
            margin-top: 6px;
        }

        .btn-primary {
            background: linear-gradient(45deg, #9B0B0B, #F72626);
            border: none;
            border-radius: 30px;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #F72626, #9B0B0B);
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Crear Película</h1>
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Director" class="control-label"></label>
                        <input asp-for="Director" class="form-control" />
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaDeLanzamiento" class="control-label"></label>
                        <input asp-for="FechaDeLanzamiento" class="form-control" />
                        <span asp-validation-for="FechaDeLanzamiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duracion" class="control-label"></label>
                        <input asp-for="Duracion" class="form-control" />
                        <span asp-validation-for="Duracion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sinopsis" class="control-label"></label>
                        <textarea asp-for="Sinopsis" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Sinopsis" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Portada" class="control-label"></label>
                        <input asp-for="Portada" class="form-control" />
                        <span asp-validation-for="Portada" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Trailer" class="control-label"></label>
                        <input asp-for="Trailer" class="form-control" />
                        <span asp-validation-for="Trailer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GeneroId" class="control-label"></label>
                        <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClasificacionId" class="control-label"></label>
                        <select asp-for="ClasificacionId" class="form-control" asp-items="ViewBag.ClasificacionId"></select>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="Activo" />
                        <label class="form-check-label" asp-for="Activo">@Html.DisplayNameFor(model => model.Activo)</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
