@model LoginVM

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Función</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            margin-top: 20px;
            background: rgba(30, 30, 30, 0.9);
            padding: 25px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            margin-bottom: 50px;
        }

        .form-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 20px;
            color: #FF3B3B;
        }

        .form-control, .btn {
            border-radius: 30px;
        }

        .form-control {
            background-color: #3a3a3a;
            color: #fff;
            border: 1px solid #9B0B0B;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #9B0B0B;
            }

        .btn-primary {
            background: linear-gradient(45deg, #9B0B0B, #F72626);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #F72626, #9B0B0B);
            }

        .text-danger {
            color: #9B0B0B !important;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="wrapper">
            <h2 class="form-title">Crear Función</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-end text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Fecha" class="form-label"></label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Sala" class="form-label"></label>
                    <input asp-for="Sala" class="form-control" />
                    <span asp-validation-for="Sala" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Idioma" class="form-label"></label>
                    <input asp-for="Idioma" class="form-control" />
                    <span asp-validation-for="Idioma" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PeliculaId" class="form-label"></label>
                    <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.PeliculaId"></select>
                    <span asp-validation-for="PeliculaId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Hora" class="form-label"></label>
                    <input asp-for="Hora" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
