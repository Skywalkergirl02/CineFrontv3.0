@model Funcion

@{
    ViewData["Title"] = "Editar";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Función</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            margin-top: 20px;
            background: rgba(30, 30, 30, 0.9);
            padding: 25px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            margin-bottom: 50px;
        }

        .form-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 20px;
            color: #FF3B3B;
        }

        .text-light {
            color: #fff !important;
        }

        .btn-primary {
            background: linear-gradient(45deg, #0062cc, #0056b3);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #0056b3, #0062cc);
            }

        .btn-secondary {
            background: linear-gradient(45deg, #3a3a3a, #6c757d);
            border: none;
        }

            .btn-secondary:hover {
                background: linear-gradient(45deg, #6c757d, #3a3a3a);
            }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="wrapper">
            <h2 class="form-title">Editar Función</h2>
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="FuncionId" />
                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label text-light"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sala" class="control-label text-light"></label>
                            <input asp-for="Sala" class="form-control" />
                            <span asp-validation-for="Sala" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Idioma" class="control-label text-light"></label>
                            <input asp-for="Idioma" class="form-control" />
                            <span asp-validation-for="Idioma" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PeliculaId" class="control-label text-light"></label>
                            <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.PeliculaId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Hora" class="control-label text-light"></label>
                            <input asp-for="Hora" class="form-control" />
                            <span asp-validation-for="Hora" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
