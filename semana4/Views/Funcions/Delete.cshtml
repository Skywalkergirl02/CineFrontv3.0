@model Funcion

@{
    ViewData["Title"] = "Eliminar";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Función</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            margin-top: 20px;
            background: rgba(30, 30, 30, 0.9);
            padding: 25px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            margin-bottom: 50px;
        }

        .form-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 20px;
            color: #FF3B3B;
        }

        .form-control, .btn {
            border-radius: 30px;
        }

        .btn-danger {
            background: linear-gradient(45deg, #9B0B0B, #F72626);
            border: none;
        }

            .btn-danger:hover {
                background: linear-gradient(45deg, #F72626, #9B0B0B);
            }

        .btn-secondary {
            background: linear-gradient(45deg, #3a3a3a, #6c757d);
            border: none;
        }

            .btn-secondary:hover {
                background: linear-gradient(45deg, #6c757d, #3a3a3a);
            }

        .text-danger {
            color: #9B0B0B !important;
        }

        .text-light {
            color: #fff !important;
        }

        dl.row {
            margin: 0;
            padding: 0;
        }

        dt.col-sm-2, dd.col-sm-10 {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="wrapper">
            <h2 class="form-title">Eliminar Función</h2>
            <h3>¿Está seguro que quiere eliminarlo?</h3>
            <div>
                <h4>Detalles de la Función</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2 text-light">
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Fecha)
                    </dd>
                    <dt class="col-sm-2 text-light">
                        @Html.DisplayNameFor(model => model.Sala)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Sala)
                    </dd>
                    <dt class="col-sm-2 text-light">
                        @Html.DisplayNameFor(model => model.Idioma)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Idioma)
                    </dd>
                    <dt class="col-sm-2 text-light">
                        Pelicula
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.fPelicula.Titulo)
                    </dd>
                    <dt class="col-sm-2 text-light">
                        @Html.DisplayNameFor(model => model.Hora)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hora)
                    </dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="FuncionId" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
